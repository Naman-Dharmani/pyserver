<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Python Execution Engine</title>
</head>
<body>
  <form action="/upload/" method="POST" enctype="multipart/form-data">
    <label for="python_uploads" style="margin-right: 40px;">Choose python files to run: </label>
    <input type="file" name="fileName" id="python_uploads" accept=".py">
    <div>
      <button>Submit</button>
    </div>
  </form>
  <br>
  <br>
  <div>
    <h3>List of Uploaded Files:</h3>
    <ul>
      <% files.forEach(function(file) { %>
        <li>
          <a href="/run/<%= file %>"><%= file %></a>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>